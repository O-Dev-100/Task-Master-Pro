{
  "manifest_version": 3,
  "name": "Task Manager Extension",
  "version": "3.0",
  "description": "Manage your tasks directly from the browser with Google Calendar sync and enhanced UX.",
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": ["storage", "notifications", "activeTab", "alarms", "identity", "calendar"],
  "oauth2": {
    "client_id": "YOUR_GOOGLE_OAUTH_CLIENT_ID",
    "scopes": ["https://www.googleapis.com/auth/calendar.events"]
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "options_page": "options/options.html"}
