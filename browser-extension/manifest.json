{ "manifest_version": 3,
  "name": "Task Manager Extension",
  "version": "1.0",
  "description": "Manage your tasks from the browser",
  "background": {
    "service_worker": "background.js"
  },
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }},
  
  "permissions": ["storage", "notifications", "activeTab"],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }}
